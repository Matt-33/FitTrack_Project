        <nav class="nav">
			<a href="/admin" class="{{#if (eq page 'dashboard')}}active{{/if}}">ğŸ“Š Dashboard</a>
			<a href="/admin/users" class="{{#if (eq page 'users')}}active{{/if}}">ğŸ‘¥ Utilisateurs</a>
			<a href="/admin/programmes" class="{{#if (eq page 'programmes')}}active{{/if}}">ğŸ“š Programmes</a>
			<a href="/admin/exercices" class="{{#if (eq page 'exercices')}}active{{/if}}">ğŸ‹ï¸ Exercices</a>
			<form method="post" action="/admin/logout" class="mt8">
