# --- Runtime ---
NODE_ENV=development
PORT=5000

# --- Database (MySQL) ---
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=motdepasse
DB_NAME=fittrack_db

# --- Auth / Sécurité ---
JWT_SECRET=change-me-jwt
SESSION_SECRET=change-me-session

# --- Rôles / Invitations ---
COACH_INVITE_CODE=DEV-COACH

# --- CORS (origines autorisées, séparées par des virgules) ---
# En dev : laisser l'URL de Vite
# En prod Railway+Netlify : remplace/ajoute l’URL Netlify (ex: https://ton-site.netlify.app)
CORS_ORIGINS=http://localhost:5173

# --- DB sync mode pour Sequelize: force | alter | safe ---
# En dev: alter (pratique). En prod Railway: 1er déploiement "alter", puis repasser à "safe".
DB_SYNC=alter

# --- Admin (back-office handlebars simple) ---
ADMIN_EMAIL=admin@fittrack.local
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin
